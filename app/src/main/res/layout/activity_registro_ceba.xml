<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Encabezado -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"
            android:text="NUEVO LOTE"
            android:textColor="@android:color/white"
            android:background="#1A2C4A"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Subtítulo -->
        <TextView
            android:id="@+id/tvProposito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROPÓSITO: CEBA"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:textColor="#444" />

        <!-- Campo: Nombre -->
        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese el nombre"
            android:background="@android:color/darker_gray"
            android:padding="10dp"
            android:layout_marginBottom="12dp"
            android:inputType="textPersonName" />

        <!-- Campo: Fecha -->
        <EditText
            android:id="@+id/etFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese la fecha meta de embarque"
            android:background="@android:color/darker_gray"
            android:padding="10dp"
            android:layout_marginBottom="12dp"
            android:inputType="date" />

        <!-- Campo: Comentarios -->
        <EditText
            android:id="@+id/etComentarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Comentarios adicionales (opcional)"
            android:background="@android:color/darker_gray"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:inputType="textMultiLine"
            android:lines="3" />

        <!-- Botón Registrar -->
        <Button
            android:id="@+id/btnRegistrarLote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:backgroundTint="#1A2C4A"
            android:textColor="@android:color/white"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_marginTop="8dp" />

    </LinearLayout>


</ScrollView>
    <!-- Barra de Navegación Inferior -->
    <include
        android:id="@+id/bottomNavigationContainer"
        layout="@layout/layout_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>