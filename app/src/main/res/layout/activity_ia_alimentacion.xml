<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

        <!-- Contenido principal centrado -->
        <LinearLayout
            android:layout_width="387dp"
            android:layout_height="707dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Icono de IA o carga -->
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="32dp"
                android:src="@android:drawable/ic_popup_sync"
                app:tint="#4A90E2" />

            <!-- Mensaje principal -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:lineSpacingExtra="4sp"
                android:text="La alimentaci칩n adecuada para tus animales est치 siendo procesada"
                android:textColor="#1E2C4C"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Mensaje secundario -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:gravity="center"
                android:lineSpacingExtra="4sp"
                android:text="Nuestra inteligencia artificial est치 analizando las mejores opciones nutricionales para tu ganado"
                android:textColor="#666666"
                android:textSize="16sp" />


        </LinearLayout>

        <!-- Barra de Navegaci칩n Inferior -->
        <include
            android:id="@+id/bottomNavigationContainer"
            layout="@layout/layout_bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>