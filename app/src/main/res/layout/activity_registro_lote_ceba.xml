<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Encabezado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#1F2C45"
            android:padding="16dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_media_previous"
                android:background="@android:color/transparent"
                android:contentDescription="Volver" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="CEBA"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-black" />
        </LinearLayout>

        <!-- Botón registrar nuevo lote -->
        <Button
            android:id="@+id/btnRegistrarLote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="REGISTRAR NUEVO LOTE"
            android:backgroundTint="#F36C21"
            android:textColor="@android:color/white"
            android:paddingHorizontal="24dp"
            android:layout_marginTop="12dp" />

        <!-- Contenido de lotes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <!-- Lote 1 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lote 1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:elevation="4dp"
                android:padding="16dp"
                android:backgroundTint="#F8F8F8"
                android:layout_marginBottom="16dp">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Peso: 612 kg"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Edad: 54 meses"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Cantidad: 26 cabezas"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Fecha Meta de Embarque: Junio 2025"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/btnRegistrarSalud"
                        android:layout_width="117dp"
                        android:layout_height="wrap_content"
                        android:text="Registrar Salud"
                        android:textSize="12sp"
                        app:backgroundTint="#26344D"/>

                    <Button
                        android:id="@+id/btnActualizarSalud"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="Actualizar Estado"
                        android:textSize="12sp"
                        app:backgroundTint="#26344D"/>

                    <Button
                        android:id="@+id/btnHistorialSalud"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Historial Salud"
                        android:textSize="12sp"
                        android:layout_marginLeft="8dp"
                        app:backgroundTint="#26344D"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Aquí puedes copiar el bloque de "Lote 1" y modificar los datos para Lote 2, 3, etc. -->

        </LinearLayout>

    </LinearLayout>

</ScrollView>
    <!-- Barra de Navegación Inferior -->
<include
android:id="@+id/bottomNavigationContainer"
layout="@layout/layout_bottom_nav"
android:layout_width="match_parent"
android:layout_height="60dp"
android:layout_alignParentBottom="true" />

    </RelativeLayout>
