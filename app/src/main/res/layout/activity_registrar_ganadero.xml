<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MI GANADO"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:gravity="center"/>

        <!-- Card Ceba -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:radius="16dp"
            android:elevation="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgCeba"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:alpha="0.6"/>
                <!--android:src="@drawable/ceba"-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CEBA"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btnRegistrarCeba"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Registrar"
                            android:layout_marginEnd="8dp"/>

                        <Button
                            android:id="@+id/btnLotesCeba"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lotes"
                            android:layout_marginEnd="8dp"/>

                        <Button
                            android:id="@+id/btnSalidaCeba"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Salida"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card Levante -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:radius="16dp"
            android:elevation="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgLevante"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:alpha="0.6"/>
                <!--android:src="@drawable/levante" -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LEVANTE"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btnRegistrarLevante"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Registrar"
                            android:layout_marginEnd="8dp"/>

                        <Button
                            android:id="@+id/btnLotesLevante"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lotes"
                            android:layout_marginEnd="8dp"/>

                        <Button
                            android:id="@+id/btnSalidaLevante"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Salida"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card Cría -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:radius="16dp"
            android:elevation="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgCria"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:alpha="0.6"/>
                <!--android:src="@drawable/cria"-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CRÍA"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btnRegistrarCria"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Registrar"
                            android:layout_marginEnd="8dp"/>

                        <Button
                            android:id="@+id/btnLotesCria"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lotes"
                            android:layout_marginEnd="8dp"/>

                        <Button
                            android:id="@+id/btnSalidaCria"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Salida"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
