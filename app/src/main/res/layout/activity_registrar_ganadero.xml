<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenido scrolleable -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Título -->
            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MI GANADO"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                android:gravity="center"/>

            <!-- Card Ceba -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgCeba"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:alpha="0.6"/>
                    <!-- android:src="@drawable/ceba" -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CEBA"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:layout_marginBottom="8dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <Button
                                android:id="@+id/btnRegistrarCeba"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Registrar"
                                android:layout_marginEnd="8dp"/>

                            <Button
                                android:id="@+id/btnLotesCeba"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lotes"
                                android:layout_marginEnd="8dp"/>

                            <Button
                                android:id="@+id/btnSalidaCeba"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Salida"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card Levante -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgLevante"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:alpha="0.6"/>
                    <!-- android:src="@drawable/levante" -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LEVANTE"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:layout_marginBottom="8dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <Button
                                android:id="@+id/btnRegistrarLevante"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Registrar"
                                android:layout_marginEnd="8dp"/>

                            <Button
                                android:id="@+id/btnLotesLevante"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lotes"
                                android:layout_marginEnd="8dp"/>

                            <Button
                                android:id="@+id/btnSalidaLevante"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Salida"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card Cría -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgCria"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:alpha="0.6"/>
                    <!-- android:src="@drawable/cria" -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CRÍA"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:layout_marginBottom="8dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <Button
                                android:id="@+id/btnRegistrarCria"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Registrar"
                                android:layout_marginEnd="8dp"/>

                            <Button
                                android:id="@+id/btnLotesCria"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lotes"
                                android:layout_marginEnd="8dp"/>

                            <Button
                                android:id="@+id/btnSalidaCria"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Salida"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Barra inferior fija -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@drawable/bg_bottom_bar"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Home -->
        <ImageButton
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/bg_nav_item_selector"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_home"
            android:contentDescription="@string/nav_home"/>

        <!-- Ganado -->
        <ImageButton
            android:id="@+id/nav_cattle"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/bg_nav_item_selector"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_cow"
            android:contentDescription="@string/nav_ganado"/>

        <!-- Marketplace -->
        <ImageButton
            android:id="@+id/nav_market"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/bg_nav_item_selector"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_cart"
            android:contentDescription="@string/nav_market"/>

        <!-- Calendario -->
        <ImageButton
            android:id="@+id/nav_calendar"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/bg_nav_item_selector"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_calendar"
            android:contentDescription="@string/nav_calendario"/>

        <!-- Perfil -->
        <ImageButton
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/bg_nav_item_selector"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_profile"
            android:contentDescription="@string/nav_perfil"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

