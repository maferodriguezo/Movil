<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Contenido principal con ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavigationContainer"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#1F2C45">

            <!-- Título -->
            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MI GANADO"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:textColor="@color/white"/>

            <!-- Card Ceba -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:radius="16dp"
                android:elevation="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgCeba"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:alpha="0.6"/>
                    <!--android:src="@drawable/ceba"-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CEBA"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:layout_marginBottom="8dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <Button
                                android:id="@+id/btnRegistrarCeba"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Registrar"
                                android:layout_marginEnd="8dp"
                                app:backgroundTint="#26344D"/>

                            <Button
                                android:id="@+id/btnLotesCeba"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lotes"
                                android:layout_marginEnd="8dp"
                                app:backgroundTint="#26344D"/>

                            <Button
                                android:id="@+id/btnSalidaCeba"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Salida"
                                app:backgroundTint="#26344D"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Barra de Navegación Inferior -->
    <include
        android:id="@+id/bottomNavigationContainer"
        layout="@layout/layout_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>